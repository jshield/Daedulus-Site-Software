#content.box{ :style => "top:8%"}
  %h3{ :style => "font-size:20px"}= "Profile: "+ @user.name
  %p{ :style => "font-size:12px;background:none;"}= @user.curstatus
  #stuff
    %p
      - unless @user.last_active.strftime("%D") == DateTime.now.strftime("%D")
        = @user.last_active.strftime("Was last seen on the %D at %H:%M.")
      - else 
        = @user.last_active.strftime("Was last seen Today at %H:%M.")
    %p
      = @user.created_at.strftime("Registered on the %D at %H:%M.")
  #end
    %p.end{:style => "text-align:right;padding-right:40px;margin-bottom:5px;"}
      %a.shoot{ :href => "#", :onclick => "showForm('shootuser',#{@user.id})"}
        Shoot
      |
      %a.index{ :href =>"#", :onclick => "return loadIndex();"}
        Return to Forum Index
        
