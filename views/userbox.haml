.box.medium.right
  %ul
    - if authorized? and @user != nil 
      %li= "<b>Hello, #{@user.name}</b>"
      %li= @user.curstatus
      %br
      %li.hdr Forum 
      %li
        %a.npst{:href => "#", :onclick => "showForm('npst');"}
          Post New Topic
      %br
      %li.hdr Toys
      %li
        %a.addweapon{:href => "#", :onclick => "showForm('addweapon');"} 
          Add Weapon to Database
      %br
      %li.hdr Management
      %li 
        %a.status{:href => "#", :onclick => "showForm('status');"} 
          Update Status 
      %li
        %a.profile{:href => "#", :onclick => "loadProfile(#{@user.id});"} 
          Profile
      %li
        %a.messages{:href => "#"} 
          Messages
      %li
        %a.password{:href => "#", :onclick => "showForm('password');"} 
          Change Password
      %li
        %a.logout{:href => "#", :onclick => "logout();"} 
          Logout
    - else
      %li
        %a.login{:href => "#", :onclick => "showForm('login');"}
          Login
      %li
        %a.register{:href => "#", :onclick => "showForm('register');"}
          Register    
