.box.medium.right
  %ul
    - if authorized? and @user != nil 
      %li= "<b>Hello, #{@user.name}</b>"
      %br 
      %li
        %a.profile{:href => "#", :onclick => "loadProfile(#{@user.id});"} 
          Profile
      %li
        %a.messages{:href => "#"} 
          Messages
      %li
        %a.password{:href => "#", :onclick => "showForm('password');"} 
          Change Password
      %li
        %a.npst{:href => "#", :onclick => "showForm('npst');"}
          Post New Topic
      %li
        %a.logout{:href => "#", :onclick => "logout();"} 
          Logout
    - else
      %li
        %a.login{:href => "#", :onclick => "showForm('login');"}
          Login
      %li
        %a.register{:href => "#", :onclick => "showForm('register');"}
          Register    
