!!! Strict
%html{ "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %title
      DAEDBOX: Test Forum
    %meta{ :content => "no", "http-equiv" => "imagetoolbar" }
    %link{ :href => "/css/a", :rel => "stylesheet", :media => "screen", :type => "text/css" }
  %body
    #menu
      %h1
        %a{ :href => "/" }
          %b
            DAED
          BOX
      %div
        %ul
          %li
            %a{ :href => "/" }
              MAIN
          %li
            %a{ :href => "/projects" }
              PROJECTS
          %li
            %a{ :href => "/blog" }
              BLOG
          %li.cur
            %a{ :href => "/forum" }
              FORUM
        %ul
          %li.cur
            %a{ :href => "/forum" }
              Test Forum
    #userbox
      .box.medium.right.red
        %h2
          %b User Box
        %ul
          %li
            %a{:href => "/user/profile"} 
              Profile
          %li
            %a{:href => "/user/messages"} 
              Messages
          %li
            %a{:href => "/user/logout"} 
              Logout

    #mainbox
      #content.box.sml
        %h2
          - unless @child == true
            %b Test Forum       
          - if @child == true
            %b= @posts.first.title 
        #stuff        
          - @posts.each do |pt|
            #reply
              - unless pt == @posts.first and @child == true
                %h3= "<a class =\"title\" href=\"/forum/post/#{pt.id}\">#{pt.title}</a>"
              - else
                %h3= "TOP POST"
              %p= "<b>by <a href=\"/user/#{pt.user.id}/profile\">#{pt.user.name}</a> on the #{pt.created_at.strftime("%D")} at #{pt.created_at.strftime("%T")}</b>"
              %p= pt.body

