%input.npst.pid{:type => "hidden", :name => "pid", :value => @post.id, :onsubmit => "post(#{@post.root.id},1);"}
%input.npst.title{:type => "text", :name => "title", :value => "Re: " + @post.title}
%br
%textarea.npst.body{:cols => 40, :rows => 10, :name => "body", :onload => "$('textarea.npst.body').focus();"} 
%br
%input.button.npst.submit{:type => "button", :name => "submit", :value => "Post", :onclick => "post(#{@post.root.id},0);"}
%input.button.npst.cancel{ :type => "button", :name => "submit", :value => "Cancel", :onclick => "cancel();"}
